<section>
  <div class="two-images-wrapper">
    {% if section.settings.image != blank %}
      <div class="one-user">
        <h1></h1>
      </div>
    {% else %}
      <div class="one">
        <h1></h1>
      </div>
    {% endif %}

    {% if section.settings.image2 != blank %}
      <div class="two-user">
        <h1></h1>
      </div>
    {% else %}
      <div class="two">
        <h1></h1>
      </div>
    {% endif %}
  </div>
</section>

<style>
  .two-images-wrapper {
    display: flex;
    position: relative;
  }

  .one {
    background-image: url(" {{'first_picture.jpg' | asset_url}}");
    width: 50%;
    height: 720px;
    background-size: cover;
    background-position: center;
  }

  .one-user {
    background-image: url(" {{section.settings.image | image_url}}");
    width: 50%;
    height: 720px;
    background-size: cover;
    background-position: center;
  }

  .two {
    background-image: url(" {{'second_picture.jpg' | asset_url}}");
    width: 50%;
    height: 720px;
    background-size: cover;
    background-position: center;
  }

  .two-user {
    background-image: url(" {{section.settings.image2 | image_url}}");
    width: 50%;
    height: 720px;
    background-size: cover;
    background-position: center;
  }

  @media screen and (max-width: 1100px) {
    .two-images-wrapper {
      flex-direction: column;
    }

    .two,
    .two-user {
      display: none;
    }

    .one,
    .one-user {
      width: 100%;
    }
  }
</style>

{% schema %}
  {
    "name": "two-images",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Pick image 1",
        "info": "400 x 120px .png recommended format"
      }, {
        "type": "image_picker",
        "id": "image2",
        "label": "Pick image 2",
        "info": "400 x 120px .png recommended format"
      }
    ],
    "blocks": [],
    "presets": [
      {
        "name": "two-images"
      }
    ]
  }
{% endschema %}