<section>
  <div class="banner-wrapper">
    <div class="slide-text" id="text1">
      <p>Join the Club - Free Shipping for Members</p>
    </div>
    <div class="slide-text" id="text2">Unlock 15% Off Your First Order - Sign Up Today</div>
    <div class="slide-text" id="text3">New Drops Weekly - Don't Miss Out</div>
  </div>
</section>

<style>
  .banner-wrapper {
    background: {{ section.settings.background }}
    ;
    color: {{ section.settings.text_color }}
    ;
    position: relative;
  }

  .slide-text {
    position: absolute;
    top: -80px;
    transform: translate(-50%, -50%);
    left: 50%;
    color: white;
    padding: 20px;
    font-size: 13px;
    opacity: 0;
    transition: opacity 0.5s ease-in-out;
  }

  .slide-text.active {
    opacity: 1;
  }
</style>


{{ 'banner.js' | asset_url | script_tag }}

