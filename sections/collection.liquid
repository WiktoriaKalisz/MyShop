{% paginate collection.products by 12 %}
  <section class="collection-sec">
    <div class="collection-header">
      <div class="collection-text">
        <h1>{{ collection.title }}</h1>
        {% if collection.description != blank %}
          <div class="collection-description">
            {{ collection.description }}
          </div>
        {% endif %}
      </div>

      <button id="sort-toggle" class="sort-button">
        SORT<img
          src="{{ 'sort.png' | asset_url }}"
          alt="Sort"
          class="sort-icon">
      </button>
    </div>

    <div class="products-grid">
      {% for product in collection.products %}
        <div class="product-card">
          <div class="image-wrapper">
            <a href="{{ product.url }}">
              <img
                width="600"
                height="800"
                loading="lazy"
                src="{{ product.featured_image | image_url: width: 600, height: 800 }}">
            </a>
          </div>
          <a href="{{ product.url }}" class="product-info">
            <div class="product-title">{{ product.title }}</div>
            <div class="product-price">
              {% if product.compare_at_price > product.price %}
                <span class="current-price has-discount">{{ product.price | money }}</span>
                <span class="old-price">{{ product.compare_at_price | money }}</span>
              {% else %}
                <span class="current-price">{{ product.price | money }}</span>
              {% endif %}
            </div>

          </a>
        </div>
      {% endfor %}
    </div>

    <div class="custom-pagination">
      {% if paginate.previous %}
        <a href="{{ paginate.previous.url }}" class="pagination-arrow">&larr;</a>
      {% else %}
        <span class="pagination-arrow disabled">&larr;</span>
      {% endif %}

      <span class="pagination-info">
        Page {{ paginate.current_page }} of {{ paginate.pages }}
      </span>

      {% if paginate.next %}
        <a href="{{ paginate.next.url }}" class="pagination-arrow">&rarr;</a>
      {% else %}
        <span class="pagination-arrow disabled">&rarr;</span>
      {% endif %}
    </div>
  </section>

  <div id="sort-panel" class="sort-panel">
    <div class="sort-panel-header">
      <h2>SORT</h2>
      <span id="sort-close" class="close-btn">&times;</span>
    </div>
    <h3 class="sort-subtitle">Sort by</h3>
    <div class="size-buttons-wrapper">
      {% assign sort_by = collection.sort_by | default: collection.default_sort_by %}

      {% for option in collection.sort_options %}
        {% case option.value %}
          {% when "best-selling" %}{% assign display_name = "Trending" %}
          {% when "price-ascending" %}{% assign display_name = "Low → High" %}
          {% when "price-descending" %}{% assign display_name = "High → Low" %}
          {% when "title-ascending" %}{% assign display_name = "A → Z" %}
          {% when "title-descending" %}{% assign display_name = "Z → A" %}
          {% when "created-descending" %}{% assign display_name = "Newest" %}
          {% when "created-ascending" %}{% assign display_name = "Oldest" %}
        {% else %}
          {% assign display_name = option.name %}
        {% endcase %}

        <label class="size-button {% if option.value == sort_by %}active{% endif %}">
          <input
            type="radio"
            name="sort-option"
            value="{{ option.value }}"
            {% if option.value == sort_by %}checked{% endif %}>
          <span>{{ display_name | upcase }}</span>
        </label>
      {% endfor %}
    </div>
    <div class="sort-divider"></div>
    <button id="apply-sort" class="sort-button">Show Results</button>
  </div>

  <div id="sort-overlay" class="sort-overlay"></div>
{% endpaginate %}

<style>
  .collection-sec {
    background: {{ section.settings.background }}
    ;
    color: {{ section.settings.text_color }}
    ;
    padding: 10px;
  }

  .collection-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 20px;
  }

  .collection-text {
    max-width: 500px;
  }

  .collection-header h1 {
    font-size: 28px;
    font-weight: bold;
    margin-bottom: 5px;
    letter-spacing: 1px;
    margin-left: 100px;
  }

  .collection-description {
    margin-left: 100px;
    font-size: 16px;
    color: #555;
    line-height: 1.5;
    letter-spacing: 1px;
    margin-bottom: 0;
    font-weight: normal;
  }

  .sort-button {
    padding: 16px 30px;
    margin-right: 100px;
    background-color: #1A237E;
    color: white;
    border: none;
    border-radius: 30px;
    font-size: 12px;
    cursor: pointer;
    transition: opacity 0.3s ease;
    letter-spacing: 0.5px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .sort-button:hover {
    opacity: 0.8;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 250px));
    gap: 20px;
    justify-content: center;
    justify-items: center;
    margin: 0 auto;
  }

  .product-card {
    width: 100%;
    max-width: 250px;
  }

  .image-wrapper {
    width: 100%;
    aspect-ratio: 3 / 4;
    overflow: hidden;
    background: #f5f5f5;
  }

  .image-wrapper img {
    width: 100%;
    height: auto;
    display: block;
  }

  .product-info {
    text-decoration: none;
    color: inherit;
    display: block;
  }
  .product-title {
    color: #000;
    font-size: 13px;
    font-weight: 500;
    margin-top: 10px;
  }

  .product-price {
    font-size: 13px;
    margin-top: 4px;
    display: flex;
    gap: 5px;
    align-items: center;
  }

  .product-price .old-price {
    text-decoration: line-through;
    color: #888;
    font-size: 12px;
  }

  .product-price .current-price {
    color: #000;
    font-weight: 500;
    font-size: 13px;
  }

  .product-price .current-price.has-discount {
    color: red;
  }

  .custom-pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 60px;
    margin-bottom: 10px;
    gap: 10px;
    font-family: Arial, sans-serif;
  }

  .pagination-arrow {
    display: inline-block;
    padding: 10px 15px;
    background-color: #1A237E;
    color: white;
    text-decoration: none;
    border-radius: 5px;
    font-weight: bold;
    transition: opacity 0.2s;
  }

  .pagination-arrow:hover {
    opacity: 0.8;
  }

  .pagination-arrow.disabled {
    background-color: #ccc;
    cursor: default;
    pointer-events: none;
  }

  .pagination-info {
    font-size: 14px;
    font-weight: 500;
  }

  .sort-panel {
    position: fixed;
    top: 0;
    right: -400px;
    width: 350px;
    height: 100%;
    background: #fff;
    box-shadow: -2px 0 8px rgba(0, 0, 0, 0.2);
    z-index: 1001;
    padding: 20px;
    transition: right 0.3s ease;
  }

  .sort-panel.open {
    right: 0;
  }

  .sort-panel-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #ddd;
    padding-bottom: 10px;
  }

  .sort-panel-header h2 {
    font-size: 18px;
    font-weight: bold;
  }
  .close-btn {
    cursor: pointer;
    font-size: 20px;
  }

  .sort-subtitle {
    margin-top: 20px;
    font-size: 14px;
    font-weight: 200;
    color: #555;
  }

  .size-buttons-wrapper {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: 10px;
    margin-top: 10px;
  }

  .size-button {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    padding: 14px 4px;
    min-width: auto;
    background: #f8f8f8;
    cursor: pointer;
    border: 1px solid transparent;
    font-size: 13px;
    transition: border 0.2s, background 0.2s;
    user-select: none;
    position: relative;
  }

  .size-button input[type="radio"] {
    display: none;
  }

  .size-button:hover {
    border: 1px solid #000;
  }

  .size-button.active {
    border: 2px solid #000;
  }

  .size-button span {
    pointer-events: none;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .sort-button .sort-icon {
    width: 15px;
    height: 15px;
    margin-left: 8px;
  }

  #apply-sort {
    margin-top: 20px;
    width: 100%;
    border-top: 1px solid #ddd;
    padding-top: 12px;
  }

  .sort-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.3);
    z-index: 1000;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .sort-overlay.active {
    opacity: 1;
    pointer-events: auto;
  }

  .sort-divider {
    border-top: 1px solid #ddd;
    margin: 20px 0 10px;
  }

  @media(max-width: 1024px) {
    .products-grid {
      max-width: 790px;
    }
  }

  @media(max-width: 768px) {
    .collection-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 15px;
    }

    .sort-button {
      margin-right: 0;
      margin-top: 10px;
      margin-left: 10px;
    }

    .collection-header h1 {
      margin-left: 10px;
    }

    .collection-description {
      margin-left: 10px;
    }

    .products-grid {
      max-width: 520px;
    }
  }

  @media(max-width: 480px) {
    .products-grid {
      max-width: 250px;
    }

    .image-wrapper {
      aspect-ratio: auto;
      height: auto;
    }

    .image-wrapper img {
      height: auto;
    }

    .sort-button {
      width: 100%;
    }
  }


}
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const sortBtn = document.getElementById('sort-toggle');
    const sortPanel = document.getElementById('sort-panel');
    const sortClose = document.getElementById('sort-close');
    const overlay = document.getElementById('sort-overlay');
    const applySort = document.getElementById('apply-sort');

    sortBtn.addEventListener('click', () => {
      sortPanel.classList.add('open');
      overlay.classList.add('active');
    });

    overlay.addEventListener('click', closePanel);
    sortClose.addEventListener('click', closePanel);

    function closePanel() {
      sortPanel.classList.remove('open');
      overlay.classList.remove('active');
    }

    applySort.addEventListener('click', () => {
      const selectedOption = document.querySelector('input[name="sort-option"]:checked');
      if (selectedOption) {
        const currentUrl = new URL(window.location.href);
        currentUrl.searchParams.set('sort_by', selectedOption.value);
        window.location.href = currentUrl.toString();
      }
    });

    const sizeButtons = document.querySelectorAll('.size-button');
    sizeButtons.forEach(btn => {
      const input = btn.querySelector('input[type="radio"]');
      input.addEventListener('change', () => {
        sizeButtons.forEach(b => b.classList.remove('active'));
        if (input.checked) 
          btn.classList.add('active');
        

      });
    });
  });
</script>